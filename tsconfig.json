{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Shortcut */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@a/*": ["src/assets/*"],
      "@c/*": ["src/components/*"],
      "@p/*": ["src/pages/*"],
      "@ser/*": ["src/services/*"],
      "@s/*": ["src/store/*"],
      "@u/*": ["src/utils/*"],
      "@t/*": ["types/*"]
    }
  },
  "include": ["src", "types"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
